@model TodoApp.Models.Todo

<h2>Supprimer la tâche</h2>

<div>
    <h4>Es-tu sûr de vouloir supprimer cette tâche ?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Titre</dt>
        <dd class="col-sm-10">@Model.TodoTitle</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.TodoDescription</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
